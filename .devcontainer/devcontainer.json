{
  "name": "uplatex-python",
  "dockerComposeFile": "docker-compose.yml",
  "service": "uplatex-python",
    "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "James-Yu.latex-workshop",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "GitHub.copilot",
        "ms-vscode.vscode-json",
        "eamodio.gitlens"
      ],
      "settings": {
        "jupyter.kernels.trusted": [
          "python3"
        ],
        "jupyter.kernelCompletionTriggerCharacters": [],
        "jupyter.interactiveWindow.creationMode": "perFile",
        "jupyter.askForKernelRestart": true,
        "jupyter.enableAutoMatcher": false,
        "jupyter.kernelSpecManager": "local",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "jupyter.interactiveWindow.textEditor.executeSelection": true,
        "jupyter.output.smartScroll": true
      }
    }
  },
  "containerEnv": {
    "LATEXINDENT_CONFIG": "/workspace/.indentconfig.yaml"
  }
}
